

<div class="new-post-container">
  <h2>New Post</h2>


  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this user from being edited: </h2>

      <ul>
        <% @post.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @post do |form| %>
    <%= form.label :title, "Post title:" %>
    <%= form.text_field :title, placeholder: "What's your headline?" %>
    <%= form.label :body, "Body:" %>
    <%= form.text_area :body, placeholder: "What's the story?" %>
    <%= form.submit "Submit Post"%>
  <% end %>
</div>
